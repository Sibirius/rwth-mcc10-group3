<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
        <servlet-name>postMessage</servlet-name>
        <servlet-class>com.rwthmcc103.mboard.PostMessageServlet</servlet-class>        		
	</servlet>	
	<servlet-mapping>
        <servlet-name>postMessage</servlet-name>
        <url-pattern>/post</url-pattern>
	</servlet-mapping>

	<servlet>
        <servlet-name>uploadImage</servlet-name>
        <servlet-class>com.rwthmcc103.mboard.UploadImageServlet</servlet-class>        		
	</servlet>	
	<servlet-mapping>
        <servlet-name>uploadImage</servlet-name>
        <url-pattern>/upload</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>mboard.jsp</welcome-file>
	</welcome-file-list>
</web-app>
