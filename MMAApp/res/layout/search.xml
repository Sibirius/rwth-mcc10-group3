<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:text="@string/search_by_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:typeface="normal" android:editable="false" android:longClickable="false" android:textSize="10pt"/>
    <Spinner
        android:id="@+id/spinner_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/search_by"
    />
    
    
    
	<EditText 	android:id="@+id/edit_search" 
				android:layout_height="wrap_content" 
				android:gravity="fill_horizontal|center" 
				android:inputType="text|textNoSuggestions" 
				android:layout_width="fill_parent">
	</EditText>
	
	<TextView   android:text="@string/search_long_text" 
				android:id="@+id/search_long"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
	
	
	<SeekBar android:id="@+id/seek_long"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"/>
        
    <TextView   android:text="@string/search_lat_text"
   				android:id="@+id/search_lat" 
    			android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
	
	   
    <SeekBar android:id="@+id/seek_lat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        />

