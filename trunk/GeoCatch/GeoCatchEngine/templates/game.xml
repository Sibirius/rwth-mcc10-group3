<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<game

name = "{{game.name}}"
mode = "{{game.mode}}"
timer = "{{game.timer}}"
status = "{{game.status}}"
mpc = "{{game.mpc}}"

>
  <players>
  	{% for player in players %}
  	<player
  		name = "{{ player.name }}"
  		number = "{{ player.number }}"
  		creator = "{{ player.creator }}"
  	/>
  	{% endfor %}
	</players>
  
	{% if additional %}
	<additional
		playerNumber = "{{ additional.playerNumber}}"
    started = "{{ additional.started }}"
    starting = "{{ additional.starting }}"
	/>
	{% endif %}
</game>
